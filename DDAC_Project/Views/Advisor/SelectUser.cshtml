@model List<DDAC_Project.Controllers.AdvisorController.UserModel>
@{
    var userCount = Model?.Count ?? 0;
}
<h2 style="padding: 15px 0px 15px 10px; color: dimgray">Select Client</h2>
<div style="background-color: #f0f0f0; margin-bottom: 75px">
    <div style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19); display: flex; flex-direction: row; justify-content: space-around; height: 400px; padding: 50px">
        @for (int i = 0; i < 3; i++)
        {
            if (i < userCount)
            {
                var user = Model[i];
                <a href="~/Advisor/FinancialAnalysis?clientId=@user.ClientID&fullName=@user.FirstName @user.LastName" style="text-decoration: none; color: inherit; height: fit-content">
                    <div style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19); background-color: white; width: 330px; height: 250px; padding: 15px">
                        <div style="display: flex; flex-direction: row; margin-bottom: 10px">
                            <img src="~/image/Avatar 4.jpeg" style="max-width: 40%; height:100px; border-radius: 50%; object-fit: contain" />
                            <p style="font-size:18px; font-weight:bold; padding: 40px 0px 20px 10px">@user.FirstName @user.LastName</p>
                        </div>
                        <p style="color: gray">Client ID: @user.ClientID</p>
                        <p style="color: gray">Email: @user.Email</p>
                        <p style="color: gray">Phone Number: @user.PhoneNumber</p>
                    </div>
                </a>
            }
            else
            {
                <div style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19); background-color: white; width: 330px; height: 250px; padding: 15px; display: flex; justify-content: center; align-items: center; text-align: center">
                    <p style="font-size: 18px; color: gray;">No other clients are currently assigned to you</p>
                </div>
            }
        }
    </div>
</div>