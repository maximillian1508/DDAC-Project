@using Microsoft.AspNetCore.Identity
@using DDAC_Project.Areas.Identity.Data

@inject UserManager<DDAC_ProjectUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fiscella</title>
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DDAC_Project.styles.css" asp-append-version="true" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</head>
<body class="d-flex flex-column" style="margin: 0; min-height:100vh;">
    <header style="padding: 0.5rem 1rem; border-bottom: solid 1px lightgrey" class="mb-2">
        <div style="display: flex; flex-direction: row; align-items: center">
            <button style="padding: 0 7.5px; font-size: 1.5rem; width: fit-content; border: solid 0.75px grey; border-radius: 10px; background-color: transparent; margin-right: 2rem" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample">
                <i class="fa-solid fa-bars"></i>
            </button>

            <p style="margin: 0; padding: 0; font-size: 1.25rem; font-weight: 500">Hello,  @UserManager.GetUserName(User)!</p>
            <p style="margin: 0 0 0 auto; padding: 0">@DateTime.Today.ToLongDateString()</p>
        </div>
        <div class="offcanvas offcanvas-start" style="width: 225px" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
            <div class="offcanvas-header" style="display: flex; flex-direction: row; align-items: center">
                <h5 style="width: fit-content; height: fit-content; display: flex; align-items: center;" class="offcanvas-title" id="offcanvasExampleLabel">
                    <img style="max-width: 100%; height: 2em; object-fit: contain; margin-right: 5px" src="~/image/Fiscella.png" />
                    Fiscella
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <nav style="height: 100%">
                    <ul class="navbar-nav justify-content-end flex-grow-1" style="height: 100%">
                        <partial name="_LoginPartial"/>
                        <li class="nav-item">
                            <a id="manage" class="nav-link sidebar-nav" asp-area="Identity" asp-page="/Account/Manage/Index" title="Profile"><i class="fa-solid fa-user"></i>Profile</a>
                        </li>
                        <li class="nav-item" style="margin-top: auto">
                            <hr style="width: 100%; border: solid 1px grey" />
                            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                                <button class="nav-link sidebar-nav" type="submit"><i class="fa-solid fa-arrow-right-from-bracket"></i>Logout</button>
                            </form>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div class="container-fluid" style="flex-grow: 1; padding: 0; width: 90%">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
