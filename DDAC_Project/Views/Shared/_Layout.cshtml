<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fiscella</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/DDAC_Project.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
</head>
<body style="display: flex; flex-direction: column;" class="d-flex flex-column min-vh-100">
    <header class="sticky-top">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid d-flex justify-content-between px-3">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index" style="padding: 0">
                    <img src="~/image/Fiscella.png" style="width:45px; height:45px;" /> 
                    <span class="ms-2" style="font-size: 1.75rem; margin: 0 auto; display: inline;">Fiscella</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <ul class="navbar-nav flex-grow-1 justify-content-center align-items-center nav-underline">
                        <li class="nav-item ms-sm-auto">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Features">Features</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                        </li>
                        <li class="ms-sm-auto">
                            <a class="btn btn-dark text-light">Login</a>
                        </li>
                        <li class="">
                            <a class="btn text-dark" style="border: 1px solid black">Register</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top container-fluid footer bg-dark text-white d-flex flex-row justify-content-between p-3 align-items-center">
        <div class="d-flex">
            <p class="m-0">&copy; 2024 Fiscella. All rights reserved.</p>
        </div>
        <a asp-area="" asp-controller="Home" asp-action="Index" class="fs-1" style="text-decoration:none; color:white">
            <img src="~/image/Fiscella-white.png" style="height:60px; width: 60px" />                    
            <span style="font-size: 1.75rem; margin: 0 auto; display: inline;">Fiscella</span>
        </a>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
