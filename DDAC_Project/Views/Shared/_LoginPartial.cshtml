@using Microsoft.AspNetCore.Identity
@using DDAC_Project.Areas.Identity.Data

@inject SignInManager<DDAC_ProjectUser> SignInManager
@inject UserManager<DDAC_ProjectUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="ms-sm-auto">
        <a id="manage" class="text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="btn btn-link text-dark border-0">Logout</button>
        </form>
    </li>
}
else
{
    <li class="ms-sm-auto">
        <a class="btn btn-dark text-light" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
    <li class="">
        <a class="btn text-dark" style="border: 1px solid black" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
}
