@model DDAC_Project.Controllers.AdminController.EditClientModel

@{
    ViewData["Title"] = "Edit Client";
}

<form asp-action="UpdateClient" asp-controller="Admin" method="post" class="row" style="border: solid 1.5px lightgrey; border-radius: 15px; height: fit-content; width: 70%; padding: 25px 20px; margin: 2em auto">
    <div class="mb-3" style="display: flex;">
        <h1 style="margin: 0; font-size: 1.75rem; width: fit-content">Edit Client</h1>
        <a asp-action="ManageUser" asp-controller="Admin" style="margin-left: auto; color: black; font-size: 1.75rem; line-height:normal"><i class="fa-solid fa-xmark"></i></a>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <input asp-for="UserId" hidden />
    <input asp-for="ClientId" hidden />
    <div class="col-md-6 mb-3">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" autocomplete="given-name" aria-required="true" readonly />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="col-md-6 mb-3">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" autocomplete="family-name" aria-required="true" readonly />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="col-12 mb-3">
        <label asp-for="PhoneNumber">Phone Number</label>
        <input asp-for="PhoneNumber" type="tel" class="form-control" autocomplete="tel" aria-required="true" readonly/>
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="col-12 mb-3">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" readonly />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="col-12 mb-3">
        <label asp-for="AdvisorId">Assigned Advisor</label>
        <select asp-for="AdvisorId" asp-items="@ViewBag.AdvisorList" class="form-select"></select>
        <span asp-validation-for="AdvisorId"></span>
    </div>
    <button id="registerSubmit" type="submit" class="w-100 btn btn-dark">Update Client</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}